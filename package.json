{
  "name": "@keimeno/wgra",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "serve": "concurrently -r \"yarn serve:docker\" \"yarn serve:scraper\" \"yarn serve:worker\"",
    "serve:docker": "docker-compose -f ./docker/docker-compose.dev.yml up",
    "serve:scraper": "lerna run serve --stream --scope=@keimeno/wgra-scraper",
    "serve:worker": "lerna run serve --stream --scope=@keimeno/wgra-worker",
    "start": "yarn start:docker",
    "start:docker": "docker-compose -f ./docker/docker-compose.prod.yml up -d",
    "start:scraper": "lerna run start --scope=@keimeno/wgra-scraper",
    "start:worker": "lerna run start --scope=@keimeno/wgra-worker"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "lerna": "^3.22.1"
  },
  "engines": {
    "node": ">= 12.x.x"
  }
}
